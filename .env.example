# Copy this file to `.env` and fill in your keys. Do NOT commit your real keys.
# Example placeholders:
GEMINI_API_KEY=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# TTS / assistant settings (optional)
# Language preference for TTS (e.g., en, hi, mr). pyttsx3 uses system voice.
ASSISTANT_VOICE_LANG=en

# Set to 'voice' to enable microphone mode when dependencies are installed
INPUT_MODE=text

# Speech recognition language (e.g., en-IN, hi-IN)
STT_LANG=en-IN

# Wake word controls (optional)
ENABLE_WAKE_WORD=false
WAKE_WORD=hey buddy
ACTIVE_WINDOW_SECONDS=15

# Let speech be interruptible by your voice (barge-in)
SPEECH_INTERRUPTIBLE=true